<!doctype html>
<html lang="en">
   <head>
      <!-- Required meta tags -->
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <!-- Bootstrap CSS -->
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
      <link rel="stylesheet" href="/styles/App.css">
      <title>Consortium Network Explorer</title>
   </head>
   <body>
    <div id="App">
      <div id="Content">
         <div class="row justify-content-center my-5 mx-0">
            <div class="col col-md-8">
               <h1><span>Consortium Network Explorer</span></h1>
               <hr>
               <form class="my-5" action="/" method="post" >
                  <label><span>Enter a transaction hash to get started.</span></label>
                  <div class="form-row">
                     <div class="col-md"><input type="text" name="value" class="ValidatedSearch form-control form-control-lg " placeholder="Search" pattern ="[0-9a-f]{64}" title="Please enter a transaction hash" value=""></div>
                     <div class="col-auto mt-2 mt-md-0"><button type="submit" class="btn btn-nano-primary btn-lg"><span>Search</span></button></div>
                  </div>
               </form>
               <h3 class="mb-0"><span>Nodes Overview</span></h3>
               <p class="text-muted"><span>Checking Transaction <span class="text-monospace"><%= value %></span></span></p>
               <hr>
               <% result.forEach(function(name) { %>
               <div class="row">
                  <div class="col">
                     <h5 class="mb-0"><%= name.nodeName %></h5>
                     <p><span class="text-monospace text-muted break-word">Status: <%- (name.nodeStatus) ? 'Confirmed' : 'Not Confirmed' %></span></p>
                  </div>
               </div>
               <% }); %>
            </div>
         </div>
      </div>
    </div>

      <!-- Optional JavaScript -->
      <!-- jQuery first, then Popper.js, then Bootstrap JS -->
      <!-- <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script> -->
      <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script> -->
      <!-- <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script> -->
   </body>
</html>